//Suraface areas and volumes.

#include<stdio.h>
#include<conio.h>
#include<stdlib.h>
#include<math.h>
#define PI 3.141

void main()
{

    int ch;
    double l,b,h,a,r,surfacarea,totasurfaarea,cursurfac,volume;
    clrscr();


    printf("\n1.Surface Area of a Cuboid.");
    printf("\n2.Surface area of a Cube.");
    printf("\n3.Curved Surface Area of a Cylinder.");
    printf("\n4.Total Surface Area of a Cylinder.");
    printf("\n5.Curved Surface Area of a Cone.");
    printf("\n6.Total Surface Area of a right circular Cone.");
    printf("\n7.Surface area of sphere of radiues.");
    printf("\n8.Curved Surface Area of a Hemisphere.");
    printf("\n9.Total Surface Area of a Hemisphere.");
    printf("\n10.Volume of a Cuboid.");
    printf("\n11.Volume of a Cube.");
    printf("\n12.Volume of a Cylinder.");
    printf("\n13.Volume of a Cone.");
    printf("\n14.Volume of a sphere of radiues.");
    printf("\n15.Volume of a Hemishere.");


    printf("\nPlease choose an option:");
    scanf("%d",&ch);


    if(ch==1)
    {
        printf("\nYou are the most Welcome!!!\n");
        printf("\nYou have selected the surface area of cubiod.\n");
        printf("\nEnter the value of length:");
        scanf("%lf",&l);
        printf("\nEnter the value of breadth:");
        scanf("%lf",&b);
        printf("\nEnter the value of hieght:");
        scanf("%lf",&h);
        surfacarea=2*(l*b+b*h+h*l);
        printf("\nSurface area of a cuboid = %lf",surfacarea);
    }


    else if(ch==2)
    {
        printf("\nYou are the most Welcome!!!\n");
        printf("\nYou have selected the surface area of cube.\n");
        printf("\nEnter the value a:");
        scanf("%lf",&a); //If each edge of the cube is a.
        surfacarea=6*pow(a,2);
        printf("\nsurafce area of a cube = %lf",surfacarea);
    }


    else if(ch==3)
    {
        printf("\nYou are the most Welcome!!!\n");
        printf("\nYou have selected the curved surface area of cylinder.\n");
        printf("\nEnter the value of radiues:");
        scanf("%lf",&r);
        printf("\nEnter the value of hieght:");
        scanf("%lf",&h);
        cursurfac=(2*PI*r*h);
        printf("\nCurved surface area of cylinder = %lf",cursurfac);
    }


    else if(ch==4)
    {
        printf("\nYou are the most Welcome!!!\n");
        printf("\nYou have selected the total surface area of cylinder.\n");
        printf("\nEnter the value of radiues:");
        scanf("%lf",&r);
        printf("\nEnter the value of hieght:");
        scanf("%lf",&h);
        totasurfaarea=(2*PI*r*(r+h));
        printf("\nTotal surafce area of a cylinder = %lf",totasurfaarea);
    }


    else if(ch==5)
    {
        printf("\nYou are the most Welcome!!!\n");
        printf("\nYou have selected the curved surface area of cone.\n");
        printf("\nEnter the value of length:");
        scanf("%lf",&l);
        printf("\nEnter the value of radiues:");
        scanf("%lf",&r);
        cursurfac=(PI*r*l);
        printf("\nCurved surface area of a cone = %lf",cursurfac);
    }


    else if(ch==6)
    {
        printf("\nYou are the most Welcome!!!\n");
        printf("\nYou have selected the total surface area of right circular cone.\n");
        printf("\nEnter the value of length:");
        scanf("%lf",&l);
        printf("\nEnter the value of radiues:");
        scanf("%lf",&r);
        totasurfaarea=(PI*r*(l+r));
        printf("\nTotal surface area of a right circular cone = %lf",totasurfaarea);
    }


    else if(ch==7)
    {
        printf("\nYou are the most Welcome!!!\n");
        printf("\nYou have selected the surface area of sphere of radiues.\n");
        printf("\nEnter the value of radiues:");
        scanf("%lf",&r);
        surfacarea=(4*PI*pow(r,2));
        printf("\nSurafce area of a sphere = %lf",surfacarea);
    }


    else if(ch==8)
    {
        printf("\nYou are the most Welcome!!!\n");
        printf("\nYou have selected the curved surface area of a hemisphere.\n");
        printf("\nEnter the value of radiues:");
        scanf("%lf",&r);
        cursurfac=(2*PI*pow(r,2));
        printf("\nCurved surface area of a hemisphere = %lf",cursurfac);
    }


    else if(ch==9)
    {
        printf("\nYou are the most Welcome!!!\n");
        printf("\nYou have selected the total surface area of hemisphere.\n");
        printf("\nEnter the value of radiues:");
        scanf("%lf",&r);
        totasurfaarea=(3*PI*pow(r,2));
        printf("\nTotal surface area of a hemisphere = %lf",totasurfaarea);
    }


    else if(ch==10)
    {
        printf("\nYou are the most Welcome!!!\n");
        printf("\nYou have selected the volume of cuboid.\n");
        printf("\nEnter the value of length:");
        scanf("%lf",&l);
        printf("\nEnter the value of breadth:");
        scanf("%lf",&b);
        printf("\nEnter the value of height:");
        scanf("%lf",&h);
        volume=(l*b*h);
        printf("\nVolume of a cuboid = %lf",volume);
    }
    
    
    else if(ch==11)
    {
        printf("\nYou are the most Welcome!!!\n");
        printf("\nYou have selected the volume of cube.\n");
        printf("\nEnter the value of a:");
        scanf("%lf",&a);
        volume=pow(a,3);
        printf("\nVolume of a cube = %lf",volume);
    }


    else if(ch==12)
    {
        printf("\nYou are the most Welcome!!!\n");
        printf("\nYou have selected the volume of clylindar.\n");
        printf("\nEnter the value of hieght:");
        scanf("%lf",&h);
        printf("\nEnter the value of radiues:");
        scanf("%lf",&r);
        volume=(PI*pow(r,2)*h);
        printf("\nVolume of a cylindar = %lf",volume);
    }


    else if(ch==13)
    {
        printf("\nYou are the most Welcome!!!\n");
        printf("\nYou have selected the volume of cone.\n");
        printf("\nEnter the value of hieght:");
        scanf("%lf",&h);
        printf("\nEnter the value of radiues:");
        scanf("%lf",&r);
        volume=(1/3*(PI*pow(r,2))*h);
        printf("\nVolume of a cone = %lf",volume);
    }

    
    else if(ch==14)
    {
        printf("\nYou are the most Welcome!!!\n");
        printf("\nYou ahve selected the volume of sphere of radiues.\n");
        printf("\nEnter the value of radiues:");
        scanf("%lf",&r);
        volume=(4/3*PI*pow(r,3));
        printf("\nVolume of a sphere of radiues = %lf",volume);
    }

    
    else if(ch==15)
    {
        printf("\nYou are the most Welcome!!!\n");
        printf("\nYou have selected the volume of hemisphere.\n");
        printf("\nEnter the value of radiues:");
        scanf("%lf",&r);
        volume=(2/3*PI*pow(r,3));
        printf("\nVolume of hemisphere = %lf",volume);
    }
    

    else
    {
        printf("\nThe choice you entered is incorrect !!!!!!!");
        printf("\nTry again and choose the correct option.");
    }
    getch();
}
